#!/bin/sh

lowercase_alpha=$(LC_ALL=C; cat /dev/urandom | tr -dc 'a-z' | fold -w 18 | head -n 1)
echo $lowercase_alpha
word_length=$(echo -n $lowercase_alpha | wc -c)
echo $word_length

random_character=$(echo $RANDOM % $word_length | bc)
echo $random_character

random_number=$(echo $RANDOM % 10 | bc)
echo $random_number

uppercase_alpha_char=$(LC_ALL=C; cat /dev/urandom | tr -dc 'A-Z' | fold -w 1 | head -n 1)
echo $uppercase_alpha_char

replace_random_char=$(echo $lowercase_alpha | sed "s/./$uppercase_alpha_char/$random_character")
echo $replace_random_char
