#!/bin/zsh

# Check argument that it is a valid directory
[[ -z $1 || ! -e "$(pwd)/$1" ]] && echo "File/directory does not exist. ğŸ˜Š" && exit 1

# Handle absolute or relative path
DELETE_FILE=[[ "$1" =~ "^/" ]] && "$1" || "$(pwd)/$1"

osascript -e "tell application \"Finder\" to delete POSIX file \"$DELETE_FILE\"" &>/dev/null

echo "$(pwd)/$1 sent to Trash ğŸ—‘"